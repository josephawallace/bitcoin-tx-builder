{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./src",
        "declaration": true,
        "rootDir": "./ts_src",
        "allowJs": false,
        "esModuleInterop": true,
    },
    "watchOptions": {
        "watchFile": "usefsevents",
        "watchDirectory": "usefsevents",
    },
    "include": [
        "ts_src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "node_modules/**/*"
    ]
}